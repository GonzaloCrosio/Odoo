<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_crypto_valuation_layer" model="ir.actions.act_window">
        <field name="name">Purchase Operations (FIFO)</field>
        <field name="res_model">crypto.valuation.layer</field>
        <field name="view_mode">list,form,graph,pivot</field>
        <field name="context">{'search_default_group_by_asset': 1}</field>
    </record>

    <!-- =========================
     VISTAS: VALUATION LAYER
========================== -->
    <record id="view_crypto_valuation_layer_list" model="ir.ui.view">
        <field name="name">crypto.valuation.layer.list</field>
        <field name="model">crypto.valuation.layer</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" optional="show"/>
                <field name="buy_date" optional="show" options="{'numeric':true}"/>
                <field name="asset_id" optional="show"/>
                <field name="qty_purchase" widget="text" optional="show" sum="Total"/>
                <field name="qty_sold" widget="text" optional="show" sum="Total"/>
                <field name="qty_available" widget="text" optional="show" sum="Total"/>
                <field name="unit_cost_eur" widget="text" optional="show"/>
                <field name="fee_eur" widget="text" optional="hide"/>
                <field name="total_cost_eur"
                       widget="monetary"
                       sum="Total"
                       optional="show"/>
                <field name="note" optional="hide"/>
                <field name="currency_id" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="view_crypto_valuation_layer_form" model="ir.ui.view">
        <field name="name">crypto.valuation.layer.form</field>
        <field name="model">crypto.valuation.layer</field>
        <field name="arch" type="xml">
            <form string="Purchase Operation">
                <!-- Smart button a Asignaciones de esta capa -->
                <header>
                    <h1>
                        <field name="name" readonly="1" class="oe_inline"/>
                    </h1>
                    <button name="action_open_allocations"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-random"
                            invisible="not id">
                        <field name="qty_sold" widget="statinfo" string="Sold"/>
                    </button>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="buy_date" options="{'numeric':true}"/>
                            <field name="asset_id" required="1"/>
                        </group>
                        <group>
                            <field name="qty_purchase"/>
                            <field name="qty_sold" readonly="1"/>
                            <field name="qty_available" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="unit_cost_eur"/>
                            <field name="fee_eur"/>
                            <field name="total_cost_eur"/>
                        </group>
                        <group>
                            <field name="purchase_mode"/>
                            <field name="note"/>
                        </group>
                    </group>
                </sheet>
                <chatter>
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids"/>
                </chatter>
            </form>
        </field>
    </record>

    <record id="view_crypto_valuation_layer_search" model="ir.ui.view">
        <field name="name">crypto.valuation.layer.search</field>
        <field name="model">crypto.valuation.layer</field>
        <field name="arch" type="xml">
            <search string="Search Purchases (FIFO)">

                <!-- Búsqueda rápida -->
                <field name="name" string="Buy Ref"/>
                <field name="asset_id"/>
                <field name="buy_date"/>
                <field name="purchase_mode"/>
                <field name="note"/>

                <separator/>

                <!-- Estado FIFO -->
                <filter string="With Available" name="with_available"
                        domain="[('qty_available','&gt;',0)]"/>
                <filter string="Fully Sold" name="fully_sold"
                        domain="[('qty_available','=',0)]"/>
                <filter string="Partially Sold" name="partially_sold"
                        domain="[('qty_sold','&gt;',0), ('qty_available','&gt;',0)]"/>
                <filter string="Never Sold" name="never_sold"
                        domain="[('qty_sold','=',0)]"/>

                <separator/>

                <!-- Fechas rápidas-->
                <filter string="This Month" name="this_month"
                        domain="[('buy_date','&gt;=', (context_today() + relativedelta(day=1)))]"/>
                <filter string="This Year" name="this_year"
                        domain="[('buy_date','&gt;=', (context_today() + relativedelta(month=1, day=1)))]"/>
                <filter string="Last 30 Days" name="last_30"
                        domain="[('buy_date','&gt;=', (context_today() + relativedelta(days=-30)))]"/>

                <separator/>

                <!-- Costes -->
                <filter string="Total Cost &gt; 0" name="cost_pos"
                        domain="[('total_cost_eur','&gt;',0)]"/>
                <filter string="Fees &gt; 0" name="fees_pos"
                        domain="[('fee_eur','&gt;',0)]"/>

                <group>
                    <!-- Group by -->
                    <filter string="Asset" name="group_by_asset"
                            context="{'group_by':'asset_id'}"/>
                    <filter string="Purchase Mode" name="group_by_mode"
                            context="{'group_by':'purchase_mode'}"/>
                    <filter string="Date" name="group_by_month"
                            context="{'group_by':'buy_date:month'}"/>
                </group>

            </search>
        </field>
    </record>

    <record id="view_crypto_valuation_layer_graph" model="ir.ui.view">
        <field name="name">crypto.valuation.layer.graph</field>
        <field name="model">crypto.valuation.layer</field>
        <field name="arch" type="xml">
            <graph string="Purchase Operations" type="bar">
                <field name="qty_purchase" type="measure"/>
                <field name="qty_sold" type="measure"/>
                <field name="qty_available" type="measure"/>
                <field name="asset_id" type="row"/>
                <field name="buy_date" interval="month" type="col"/>
            </graph>
        </field>
    </record>
</odoo>
