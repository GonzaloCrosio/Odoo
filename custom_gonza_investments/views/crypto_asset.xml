<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- =========================
         ACCIONES (defÃ­nelas antes de las vistas que las referencian)
    ========================== -->
    <record id="action_crypto_asset" model="ir.actions.act_window">
        <field name="name">Assets</field>
        <field name="res_model">crypto.asset</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- =========================
         VISTAS: CRYPTO ASSET
    ========================== -->
    <record id="view_crypto_asset_list" model="ir.ui.view">
        <field name="name">crypto.asset.list</field>
        <field name="model">crypto.asset</field>
        <field name="arch" type="xml">
            <list>
                <field name="symbol" widget="text"/>
                <field name="name" widget="text" optional="hide"/>
                <field name="precision" widget="text" optional="hide"/>
                <field name="company_id" widget="text" optional="hide"/>
                <field name="price_usd" widget="text" optional="show"/>
                <field name="currency_id" widget="text" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="view_crypto_asset_form" model="ir.ui.view">
        <field name="name">crypto.asset.form</field>
        <field name="model">crypto.asset</field>
        <field name="arch" type="xml">
            <form string="Crypto Asset">
                <sheet>
                    <group>
                        <group>
                            <field name="symbol"/>
                            <field name="name"/>
                            <field name="precision"/>
                        </group>
                        <group>
                            <field name="currency_id"/>
                            <field name="price_usd"/>
                            <field name="market_cap_usd"/>
                            <field name="cmc_rank"/>
                            <field name="dominance_percentage"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                </sheet>
                <chatter>
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids"/>
                </chatter>
            </form>
        </field>
    </record>

    <record id="view_crypto_asset_search" model="ir.ui.view">
        <field name="name">crypto.asset.search</field>
        <field name="model">crypto.asset</field>
        <field name="arch" type="xml">
            <search>
                <field name="symbol"/>
                <field name="name"/>
                <group>
                    <filter string="Company" name="group_by_company"
                            context="{'group_by':'company_id'}"/>
                    <filter string="Name" name="group_by_name"
                            context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
