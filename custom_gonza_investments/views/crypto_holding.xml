<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Vista List de las tenencias "Holding" -->
    <record id="view_crypto_holding_list" model="ir.ui.view">
        <field name="name">crypto.holding.list</field>
        <field name="model">crypto.holding</field>
        <field name="arch" type="xml">
            <list string="Crypto Holdings">
                <field name="asset_id" width="40px"/>
                <field name="company_id" optional="hide" width="100px"/>
                <field name="qty_available" widget="text" optional="show" width="175px"/>
                <field name="current_price_usd" widget="monetary" optional="show" width="175px"/>
                <field name="avg_buy_price_eur" widget="monetary" optional="show" width="175px"/>
                <field name="cost_basis_eur" widget="monetary" sum="Total" optional="show" width="175px"/>
                <field name="value_usd" widget="monetary" sum="Total" optional="show" width="200px"/>
                <field name="unrealized_pl_eur" widget="monetary" sum="Total" optional="show" width="175px"
                       decoration-success="unrealized_pl_eur &gt; 0"
                       decoration-danger="unrealized_pl_eur &lt; 0"/>
                <field name="unrealized_return_pct" optional="show" width="175px" widget="percentage"
                       decoration-success="unrealized_return_pct &gt; 0"
                       decoration-danger="unrealized_return_pct &lt; 0"/>
                <field name="cmc_rank" widget="text" optional="show" width="150px"/>
                <field name="dominance_percentage" optional="show" width="100px"/>
                <field name="currency_id" optional="hide"/>
            </list>
        </field>
    </record>


    <!-- Vista FORM de las tenencias "Holding" -->
    <record id="view_crypto_holding_form" model="ir.ui.view">
        <field name="name">crypto.holding.form</field>
        <field name="model">crypto.holding</field>
        <field name="arch" type="xml">
            <form string="Crypto Holding">
                <header>
                    <button name="action_open_valuation_layers"
                            type="object"
                            string="Open Purchases"
                            class="oe_highlight"/>
                </header>
                <sheet>
                    <h1>
                        <div class="o_field_input_buttons">
                            <field name="asset_id"/>
                        </div>
                        <div class="o_field_widget o_required_modifier o_field_text text-break">
                            <field name="asset_id" readonly="1" options="{'no_open': True}"/>
                        </div>
                    </h1>
                    <group string="Asset Informations">
                        <group>
                            <field name="asset_id"/>
                            <field name="company_id"/>
                            <field name="currency_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="qty_available" readonly="1"/>
                            <field name="current_price_usd" readonly="1"/>
                            <field name="value_usd" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Market Data">
                            <group>
                                <field name="market_cap_usd" readonly="1"/>
                                <field name="cmc_rank" readonly="1"/>
                                <field name="dominance_percentage" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACCIÃ“N -->
    <record id="action_crypto_holding" model="ir.actions.act_window">
        <field name="name">Holdings</field>
        <field name="res_model">crypto.holding</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>
                This view shows your current crypto positions, with quantity available
                and market value based on the latest prices.
            </p>
        </field>
    </record>
</odoo>
