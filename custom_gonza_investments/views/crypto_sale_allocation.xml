<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_crypto_allocation" model="ir.actions.act_window">
        <field name="name">FIFO Allocations</field>
        <field name="res_model">crypto.sale.allocation</field>
        <field name="view_mode">list,graph,pivot</field>
    </record>

    <!-- =========================
     VISTAS: ASIGNACIONES FIFO
    ========================== -->
    <record id="view_crypto_allocation_list" model="ir.ui.view">
        <field name="name">crypto.sale.allocation.list</field>
        <field name="model">crypto.sale.allocation</field>
        <field name="arch" type="xml">
            <list>
                <field name="allocation_date" options="{'numeric':true}" optional="show"/>
                <field name="asset_id" optional="show"/>
                <field name="sale_line_id" optional="show" options="{'no_open': False}"/>
                <field name="in_layer_id" optional="hide" options="{'no_open': False}"/>
                <field name="qty_sold" sum="Total" optional="show"/>
                <field name="proceeds_unit_eur" widget="text" optional="show"/>
                <field name="unit_cost_eur" widget="monetary"
                       sum="Total" optional="show"/>
                <field name="fee_unit_eur" widget="monetary"
                       sum="Total" optional="hide"/>
                <field name="proceeds_eur" widget="monetary"
                       sum="Total" optional="show"/>
                <field name="cost_eur" widget="monetary"
                       sum="Total" optional="show"/>
                <field name="fee_eur" widget="monetary"
                       sum="Total" optional="hide"/>
                <field name="profit_eur" widget="monetary"
                       sum="Total" optional="show"/>
                <field name="tax_eur" widget="monetary"
                       sum="Total" optional="show"/>
                <field name="company_id" optional="hide"/>
                <field name="currency_id" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="view_crypto_allocation_search" model="ir.ui.view">
        <field name="name">crypto.sale.allocation.search</field>
        <field name="model">crypto.sale.allocation</field>
        <field name="arch" type="xml">
            <search string="Search FIFO Allocations">

                <!-- Búsqueda rápida -->
                <field name="asset_id"/>
                <field name="allocation_date"/>
                <field name="sale_line_id" string="Sale Line"/>
                <field name="in_layer_id" string="Purchase Layer"/>
                <field name="company_id" groups="base.group_multi_company"/>

                <separator/>

                <!-- Resultado / performance -->
                <filter string="Profit &gt; 0" name="profit_pos"
                        domain="[('profit_eur','&gt;',0)]"/>
                <filter string="Profit &lt; 0" name="profit_neg"
                        domain="[('profit_eur','&lt;',0)]"/>
                <filter string="Tax &gt; 0" name="tax_pos"
                        domain="[('tax_eur','&gt;',0)]"/>

                <separator/>

                <!-- Rangos de fecha (compatibles con Odoo 19 / JS) -->
                <filter string="This Month" name="this_month"
                        domain="[('allocation_date','&gt;=', (context_today() + relativedelta(day=1)))]"/>
                <filter string="This Year" name="this_year"
                        domain="[('allocation_date','&gt;=', (context_today() + relativedelta(month=1, day=1)))]"/>
                <filter string="Last 30 Days" name="last_30"
                        domain="[('allocation_date','&gt;=', (context_today() + relativedelta(days=-30)))]"/>

                <group>
                    <!-- Group by -->
                    <filter string="Asset" name="group_by_asset"
                            context="{'group_by':'asset_id'}"/>
                    <filter string="Date (Month)" name="group_by_month"
                            context="{'group_by':'allocation_date:month'}"/>
                    <filter string="Sale Line" name="group_by_sale_line"
                            context="{'group_by':'sale_line_id'}"/>
                    <filter string="Company" name="group_by_company"
                            context="{'group_by':'company_id'}"/>
                </group>

            </search>
        </field>
    </record>

    <record id="view_crypto_allocation_pivot" model="ir.ui.view">
        <field name="name">crypto.sale.allocation.pivot</field>
        <field name="model">crypto.sale.allocation</field>
        <field name="arch" type="xml">
            <pivot string="Profit for month/asset">
                <field name="profit_eur" type="measure"/>
                <field name="tax_eur" type="measure"/>
                <field name="qty_sold" type="measure"/>
                <field name="allocation_date" interval="month" type="col"/>
                <field name="sale_line_id" type="row"/>
                <field name="in_layer_id" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="view_crypto_allocation_graph" model="ir.ui.view">
        <field name="name">crypto.sale.allocation.graph</field>
        <field name="model">crypto.sale.allocation</field>
        <field name="arch" type="xml">
            <graph string="Profit" type="bar">
                <field name="profit_eur" type="measure"/>
                <field name="tax_eur" type="measure"/>
                <field name="allocation_date" interval="month" type="col"/>
                <field name="sale_line_id" type="row"/>
            </graph>
        </field>
    </record>
</odoo>
