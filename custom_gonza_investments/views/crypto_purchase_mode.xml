<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--Crea las vistas del modelo-->
    <record id="crypto_payment_mode_action" model="ir.actions.act_window">
        <field name="name">Purchase Mode</field>
        <field name="res_model">crypto.purchase.mode</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No purchase mode created.</p>
        </field>
    </record>

    <!--Defino vista form-->
    <record id="crypto_payment_mode_view_form" model="ir.ui.view">
        <field name="name">crypto.purchase.mode.view.form</field>
        <field name="model">crypto.purchase.mode</field>
        <field name="arch" type="xml">
            <form string="Purchase Mode">
                <header string="Purchase Mode">
                    <!--Nombre de la etiqueta-->
                    <h1>Purchase Mode</h1>
                </header>
                <!--Te forma una secciÃ³n dentro de la pantalla-->
                <sheet>
                    <group>
                        <field string="Purchase Mode" name="custom_name"
                               readonly="False"/>
                        <field name="description"/>
                    </group>
                </sheet>
                <chatter>
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids"/>
                </chatter>
            </form>
        </field>
    </record>

    <!--Defino vista list-->
    <record id="crypto_payment_mode_list" model="ir.ui.view">
        <field name="name">crypto.purchase.mode.view.list</field>
        <field name="model">crypto.purchase.mode</field>
        <field name="arch" type="xml">
            <list class="inv_list">
                <field name="custom_name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

</odoo>
