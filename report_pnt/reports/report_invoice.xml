<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="pnt_report_invoice_document"
              inherit_id="account.report_invoice_document">
        <!--Quitar datos superiores-->
        <xpath expr="//div[@name='shipping_address_block']" position="attributes">
            <attribute name="t-if">not o.company_id.pnt_check_invoice_shipping_address_block</attribute>
        </xpath>
        <xpath expr="//div[@name='address_not_same_as_shipping']" position="attributes">
            <attribute name="t-if">not o.company_id.pnt_check_invoice_address_not_same_shipping</attribute>
        </xpath>
        <xpath expr="//div[@name='address_same_as_shipping']" position="attributes">
            <attribute name="t-if">not o.company_id.pnt_check_invoice_address_same_shipping</attribute>
        </xpath>
        <xpath expr="//div[@name='no_shipping']" position="attributes">
            <attribute name="t-if">not o.company_id.pnt_check_invoice_no_shipping</attribute>
        </xpath>
        <xpath expr="//div[@name='invoice_date']" position="attributes">
            <attribute name="t-if">o.invoice_date and not o.company_id.pnt_check_invoice_date</attribute>
        </xpath>
        <xpath expr="//div[@name='due_date']" position="attributes">
            <attribute name="t-if">o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'and not o.company_id.pnt_check_invoice_due_date</attribute>
        </xpath>
        <xpath expr="//div[@name='delivery_date']" position="attributes">
            <attribute name="t-if">o.delivery_date and not o.company_id.pnt_check_invoice_delivery_date</attribute>
        </xpath>
        <xpath expr="//div[@name='origin']" position="attributes">
            <attribute name="t-if">o.invoice_origin and not o.company_id.pnt_check_invoice_source</attribute>
        </xpath>
        <xpath expr="//div[@name='customer_code']" position="attributes">
            <attribute name="t-if">o.partner_id.ref and not o.company_id.pnt_check_invoice_customer_code</attribute>
        </xpath>
        <xpath expr="//div[@name='reference']" position="attributes">
            <attribute name="t-if">o.ref and not o.company_id.pnt_check_invoice_reference</attribute>
        </xpath>
        <xpath expr="//div[@name='incoterm_id']" position="attributes">
            <attribute name="t-if">o.invoice_incoterm_id and o.company_id.pnt_check_invoice_incoterm</attribute>
        </xpath>
        <!--Ocultar columnas-->
        <xpath expr="//th[@name='th_description']" position="attributes">
            <attribute name="t-if">not o.company_id.pnt_check_invoice_quantity</attribute>
        </xpath>
        <xpath expr="//td[@name='account_invoice_line_name']" position="attributes">
            <attribute name="t-if">not o.company_id.pnt_check_invoice_quantity</attribute>
        </xpath>
        <xpath expr="//th[@name='th_quantity']" position="attributes">
            <attribute name="t-if">not o.company_id.pnt_check_invoice_quantity</attribute>
        </xpath>
        <xpath expr="//td[@name='td_quantity']" position="attributes">
            <attribute name="t-if">not o.company_id.pnt_check_invoice_quantity</attribute>
        </xpath>
        <xpath expr="//th[@name='th_priceunit']" position="attributes">
            <attribute name="t-if">not o.company_id.pnt_check_invoice_unit_price</attribute>
        </xpath>
        <xpath expr="//td[@name='td_price_unit']" position="attributes">
            <attribute name="t-if">not o.company_id.pnt_check_invoice_unit_price</attribute>
        </xpath>
        <xpath expr="//th[@name='th_discount']" position="attributes">
            <attribute name="t-if">display_discount and not o.company_id.pnt_check_invoice_discount</attribute>
        </xpath>
        <xpath expr="//td[@name='td_discount']" position="attributes">
            <attribute name="t-if">display_discount and not o.company_id.pnt_check_invoice_discount</attribute>
        </xpath>
        <xpath expr="//th[@name='th_taxes']" position="attributes">
            <attribute name="t-if">not o.company_id.pnt_check_invoice_taxes</attribute>
        </xpath>
        <xpath expr="//td[@name='td_taxes']" position="attributes">
            <attribute name="t-if">not o.company_id.pnt_check_invoice_taxes</attribute>
        </xpath>
        <xpath expr="//th[@name='th_subtotal']" position="attributes">
            <attribute name="t-if">not o.company_id.pnt_check_invoice_subtotal</attribute>
        </xpath>
        <xpath expr="//td[@name='td_subtotal']" position="attributes">
            <attribute name="t-if">not o.company_id.pnt_check_invoice_subtotal</attribute>
        </xpath>
        <!--Ocultar datos inferiores a la tabla-->
        <xpath expr="//div[@id='right-elements']" position="attributes">
            <attribute name="t-if">not o.company_id.pnt_check_invoice_total_table</attribute>
        </xpath>
        <xpath expr="//p[@name='note']" position="attributes">
            <attribute name="t-if">not is_html_empty(o.fiscal_position_id.note) and not o.company_id.pnt_check_invoice_fiscal_position</attribute>
        </xpath>
        <xpath expr="//span[@id='payment_terms_note_id']" position="attributes">
            <attribute name="t-if">o.invoice_payment_term_id.note and not o.company_id.pnt_check_invoice_payment_term_id</attribute>
        </xpath>
        <xpath expr="//div[@id='total_payment_term_details_table']" position="attributes">
            <attribute name="t-if">o.show_payment_term_details and not
                o.company_id.pnt_check_invoice_show_payment_term_details
            </attribute>
        </xpath>
    </template>

