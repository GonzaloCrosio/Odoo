<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pnt_view_company_form" model="ir.ui.view">
        <field name="name">pnt.res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[@name='branches']" position="after">
                <page name="Reports" string="Custom Reports">
                    <group name="invoice" string="Invoice">
                        <group>
                            <field name="pnt_check_invoice_description"/>
                            <field name="pnt_check_invoice_quantity"/>
                            <field name="pnt_check_invoice_unit_price"/>
                            <field name="pnt_check_invoice_discount"/>
                            <field name="pnt_check_invoice_taxes"/>
                            <field name="pnt_check_invoice_subtotal"/>
                            <field name="pnt_check_invoice_total_table"/>
                            <field name="pnt_check_invoice_fiscal_position"/>
                            <field name="pnt_check_invoice_payment_term_id"/>
                            <field name="pnt_check_invoice_show_payment_term_details"/>
                        </group>
                        <group>
                            <field name="pnt_check_invoice_shipping_address_block"/>
                            <field name="pnt_check_invoice_address_not_same_shipping"/>
                            <field name="pnt_check_invoice_address_same_shipping"/>
                            <field name="pnt_check_invoice_no_shipping"/>
                            <field name="pnt_check_invoice_date"/>
                            <field name="pnt_check_invoice_due_date"/>
                            <field name="pnt_check_invoice_delivery_date"/>
                            <field name="pnt_check_invoice_source"/>
                            <field name="pnt_check_invoice_customer_code"/>
                            <field name="pnt_check_invoice_reference"/>
                            <field name="pnt_check_invoice_incoterm"/>
                        </group>
                    </group>
                    <group name="sale" string="Sale Reports">
                        <field name="pnt_check_invoice_quantity" string="Quantity"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
