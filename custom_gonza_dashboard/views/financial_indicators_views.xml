<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- LIST view (Odoo 19 uses <list>) -->
    <record id="view_financial_indicators_list" model="ir.ui.view">
        <field name="name">financial.indicators.list</field>
        <field name="model">financial.indicators</field>
        <field name="arch" type="xml">
            <list string="Financial Indicators" create="true" edit="true">
                <field name="name" optional="show"/>
                <field name="currency_id" optional="show"/>
                <field name="last_sync" optional="show"/>
                <field name="last_sync_message" optional="hide"/>
                <field name="tga_value" optional="show"/>
                <field name="tga_date" optional="hide"/>
                <field name="reserves_value" optional="show"/>
                <field name="reserves_date" optional="hide"/>
                <field name="on_rrp_value" optional="show"/>
                <field name="on_rrp_date" optional="hide"/>
                <field name="sofr_value" optional="show"/>
                <field name="sofr_date" optional="hide"/>
                <field name="usd_index_value" optional="show"/>
                <field name="usd_index_date" optional="hide"/>
                <field name="vix_value" optional="show"/>
                <field name="vix_date" optional="hide"/>
                <field name="move_value" optional="show"/>
                <field name="move_date" optional="hide"/>
                <field name="sp500_value" optional="show"/>
                <field name="sp500_date" optional="hide"/>
                <field name="djia_value" optional="show"/>
                <field name="djia_date" optional="hide"/>
                <field name="nasdaqcom_value" optional="show"/>
                <field name="nasdaqcom_date" optional="hide"/>
                <field name="nasdaq100_value" optional="show"/>
                <field name="nasdaq100_date" optional="hide"/>
                <field name="inflation_yoy" optional="show"/>
                <field name="inflation_yoy_date" optional="hide"/>
                <field name="unemployment_value" optional="show"/>
                <field name="unemployment_date" optional="hide"/>
                <field name="interest_rate_value" optional="show"/>
                <field name="interest_rate_date" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- FORM view -->
    <record id="view_financial_indicators_form" model="ir.ui.view">
        <field name="name">financial.indicators.form</field>
        <field name="model">financial.indicators</field>
        <field name="arch" type="xml">
            <form string="Financial Indicators">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="FRED Indicators"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="currency_id"/>
                        </group>
                        <group>
                            <field name="last_sync" readonly="1"/>
                            <field name="last_sync_message" readonly="1"/>
                        </group>
                    </group>

                    <notebook>

                        <page string="Liquidity / Fed">
                            <group>
                                <group string="Treasury General Account (TGA)">
                                    <field name="tga_value" readonly="1"/>
                                    <field name="tga_date" readonly="1"/>
                                    <field name="fred_series_tga"/>
                                    <field name="tga_link"/>
                                </group>

                                <group string="Bank Reserves">
                                    <field name="reserves_value" readonly="1"/>
                                    <field name="reserves_date" readonly="1"/>
                                    <field name="fred_series_reserves"/>
                                    <field name="reserves_link"/>
                                </group>
                            </group>

                            <group>
                                <group string="SRF">
                                    <field name="srf_value" readonly="1"/>
                                    <field name="srf_date" readonly="1"/>
                                    <field name="fred_series_srf"
                                           placeholder="Search in FRED API and paste the series_id"/>
                                    <field name="srf_link"/>
                                </group>

                                <group string="ON RRP">
                                    <field name="on_rrp_value" readonly="1"/>
                                    <field name="on_rrp_date" readonly="1"/>
                                    <field name="fred_series_on_rrp"/>
                                    <field name="on_rrp_link"/>
                                </group>
                            </group>

                            <group>
                                <group string="SOFR">
                                    <field name="sofr_value" readonly="1"/>
                                    <field name="sofr_date" readonly="1"/>
                                    <field name="fred_series_sofr"/>
                                    <field name="sofr_link"/>
                                </group>

                                <group string="BONDS">
                                    <field name="bonds_usa_value" readonly="1"/>
                                    <field name="bonds_date" readonly="1"/>
                                    <field name="fred_series_bonds"/>
                                    <field name="bonds_link"/>
                                </group>
                            </group>

                            <group>
                                <group string="Inverse Repo">
                                    <field name="inverse_repo_value" readonly="1"/>
                                    <field name="inverse_repo_date" readonly="1"/>
                                    <field name="fred_series_inverse_repo"/>
                                    <field name="inverse_repo_link"/>
                                </group>

                            </group>
                        </page>

                        <page string="Markets">
                            <group>
                                <group string="S&amp;P 500">
                                    <field name="sp500_value" readonly="1"/>
                                    <field name="sp500_date" readonly="1"/>
                                    <field name="fred_series_sp500"/>
                                    <field name="sp500_link"/>
                                </group>

                                <group string="Dow Jones (DJIA)">
                                    <field name="djia_value" readonly="1"/>
                                    <field name="djia_date" readonly="1"/>
                                    <field name="fred_series_djia"/>
                                    <field name="djia_link"/>
                                </group>
                            </group>

                            <group>
                                <group string="NASDAQ Composite">
                                    <field name="nasdaqcom_value" readonly="1"/>
                                    <field name="nasdaqcom_date" readonly="1"/>
                                    <field name="fred_series_nasdaqcom"/>
                                    <field name="nasdaqcom_link"/>
                                </group>

                                <group string="NASDAQ 100">
                                    <field name="nasdaq100_value" readonly="1"/>
                                    <field name="nasdaq100_date" readonly="1"/>
                                    <field name="fred_series_nasdaq100"/>
                                    <field name="nasdaq100_link"/>
                                </group>
                            </group>

                            <group>
                                <group string="USD Index (DXY / proxy)">
                                    <field name="usd_index_value" readonly="1"/>
                                    <field name="usd_index_date" readonly="1"/>
                                    <field name="fred_series_usd_index"/>
                                    <field name="usd_index_link"/>
                                </group>

                                <group string="VIX">
                                    <field name="vix_value" readonly="1"/>
                                    <field name="vix_date" readonly="1"/>
                                    <field name="fred_series_vix"/>
                                    <field name="vix_link"/>
                                </group>
                            </group>

                            <group>
                                <group string="MOVE">
                                    <field name="move_value"/>
                                    <field name="move_date"/>
                                    <field name="fred_series_move"/>
                                    <field name="move_link"/>
                                </group>
                            </group>
                        </page>

                        <page string="Macro">
                            <group>
                                <group string="Interest Rate">
                                    <field name="interest_rate_value" readonly="1"/>
                                    <field name="interest_rate_date" readonly="1"/>
                                    <field name="fred_series_ffr"/>
                                    <field name="interest_rate_link"/>
                                </group>

                                <group string="Inflation">
                                    <field name="inflation_cpi_value" readonly="1"/>
                                    <field name="inflation_cpi_date" readonly="1"/>
                                    <field name="inflation_link"/>
                                    <field name="inflation_yoy" readonly="1"/>
                                    <field name="inflation_6m" readonly="1"/>
                                    <field name="inflation_mom" readonly="1"/>
                                    <field name="inflation_yoy_date" invisible="1" readonly="1"/>
                                    <field name="inflation_6m_date" invisible="1" readonly="1"/>
                                    <field name="inflation_mom_date" invisible="1" readonly="1"/>
                                    <field name="fred_series_cpi"/>
                                </group>

                            </group>

                            <group>
                                <group string="Unemployment">
                                    <field name="unemployment_value" readonly="1"/>
                                    <field name="unemployment_date" readonly="1"/>
                                    <field name="fred_series_unrate"/>
                                    <field name="unemployment_link"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
