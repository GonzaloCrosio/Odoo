<odoo>

    <!-- Action -->
    <record id="action_dashboard_control" model="ir.actions.act_window">
        <field name="name">Financial Dashboard</field>
        <field name="res_model">dashboard.control</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_dashboard_control_search"/>
        <field name="context">{}</field>
    </record>

    <record id="action_financial_indicators" model="ir.actions.act_window">
        <field name="name">Financial Indicators</field>
        <field name="res_model">financial.indicators</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a record to store the latest FRED indicators.
            </p>
        </field>
    </record>

    <!--Asegurarse que llama a nuestras vistas-->
    <record id="action_financial_indicators_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_financial_indicators_form"/>
        <field name="act_window_id" ref="action_financial_indicators"/>
    </record>

    <record id="action_financial_indicators_view_list" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_financial_indicators_list"/>
        <field name="act_window_id" ref="action_financial_indicators"/>
    </record>

    <!-- MenÃºs -->
    <menuitem id="menu_financial_root"
              name="Financial Data"
              sequence="10"
              web_icon="custom_gonza_dashboard,static/description/icon.png"/>

    <menuitem id="menu_financial_dashboard"
              name="Dashboard"
              parent="menu_financial_root"
              sequence="10"/>

    <menuitem id="menu_financial_dashboard_control"
              name="Indicators Dashboard"
              parent="menu_financial_dashboard"
              action="action_dashboard_control"
              sequence="10"/>

    <menuitem id="menu_financial_indicators"
              name="Indicators (FRED)"
              parent="menu_financial_root"
              action="action_financial_indicators"
              sequence="20"/>

</odoo>