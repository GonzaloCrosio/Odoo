<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Define la vista list (donde se muestra la lista de datos)-->
    <record id="view_expenses_list" model="ir.ui.view">
        <field name="name">expenses.list</field>
        <field name="model">exp.expenses.expenses</field>
        <field name="arch" type="xml">
            <list string="Expenses">
                <!--Hago invisible la columna currency-->
                <!--Pero debe estar currency para que aparezca el signo euro-->
                <field name="currency_id" column_invisible="True"/>
                <field name="expenses_tag_id" optional="show" width="120"/>
                <field name="expenses_secundary_tag_id" optional="show"
                       widget="many2many_tags" width="150"/>
                <field name="date" options="{'numeric':true}"
                       optional="show" width="110"/>
                <field name="expense_amount" optional="show" width="100"
                       widget="monetary"/>
                <field name="income_amount" optional="show" width="100"
                       widget="monetary"/>
                <field name="expenses_payment_mode_id" optional="hide" width="130"/>
                <field name="expenses_type_id" optional="hide" width="130"/>
                <field name="description" optional="hide" width="200"/>
                <field name="is_recurring" optional="hide" width="200"/>
                <field name="recurrence_frequency" optional="hide" width="200"/>
                <field name="recurrence_interval" optional="hide" width="200"/>
                <field name="recurrence_end_date" options="{'numeric':true}" optional="hide" width="200"/>
                <field name="recurrence_parent_id" optional="hide" width="200"/>
            </list>
        </field>
    </record>

    <!--Define la vista Form (donde se carga el dato)-->
    <record id="view_expenses_form" model="ir.ui.view">
        <field name="name">expenses.form</field>
        <field name="model">exp.expenses.expenses</field>
        <field name="arch" type="xml">
            <form string="Expenses">
                <sheet>
                    <group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="expense_amount" widget="monetary"/>
                            <field name="income_amount" widget="monetary"/>
                            <field name="date" options="{'numeric':true}"/>
                            <field name="expenses_tag_id"/>
                            <field name="expenses_secundary_tag_id"
                                   widget="many2many_tags"/>
                            <field name="expenses_payment_mode_id"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="expenses_type_id"/>
                            <field name="pdf_attachment" filename="pdf_filename"
                                   widget="binary" class="oe_form_field_file"/>
                            <field name="is_recurring"/>
                            <field name="recurrence_frequency" invisible="not is_recurring"/>
                            <field name="recurrence_interval" invisible="not is_recurring"/>
                            <field name="recurrence_end_date" options="{'numeric':true}" invisible="not is_recurring"/>
                            <field name="recurrence_parent_id" invisible="not is_recurring"/>
                        </group>
                    </group>
                    <field name="compatible_secundary_tags_ids" invisible="1"/>
                </sheet>
                <chatter>
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids"/>
                </chatter>
            </form>
        </field>
    </record>

    <!--Crea los filtros disponibles -->
    <record id="expenses_expenses_view_search" model="ir.ui.view">
        <field name="name">exp.expenses.expenses.view.search</field>
        <field name="model">exp.expenses.expenses</field>
        <field name="arch" type="xml">
            <search string="Search Expenses">

                <!-- Búsqueda rápida -->
                <field name="description" string="Description"/>
                <field name="expenses_tag_id" string="Category"/>
                <field name="expenses_secundary_tag_id" string="Secondary Tags"/>
                <field name="expenses_payment_mode_id" string="Payment Mode"/>
                <field name="expenses_type_id" string="Type"/>
                <field name="date"/>

                <separator/>

                <!-- Filtros útiles -->
                <filter string="Expenses" name="f_expenses" domain="[('expense_amount','&gt;',0)]"/>
                <filter string="Income" name="f_income" domain="[('income_amount','&gt;',0)]"/>

                <filter string="Recurring" name="f_recurring" domain="[('is_recurring','=',True)]"/>
                <filter string="Not recurring" name="f_not_recurring" domain="[('is_recurring','=',False)]"/>

                <separator/>

                <!-- Fechas típicas -->
                <filter string="This Month" name="f_this_month"
                        domain="[('date','&gt;=', (context_today() + relativedelta(day=1)))]"/>

                <filter string="This Year" name="f_this_year"
                        domain="[('date','&gt;=', (context_today() + relativedelta(month=1, day=1)))]"/>

                <separator/>

                <!-- Agrupaciones -->
                <filter string="Group by Category" name="grp_cat" context="{'group_by':'expenses_tag_id'}"/>
                <filter string="Group by Secondary Tags" name="grp_sectag"
                        context="{'group_by':'expenses_secundary_tag_id'}"/>
                <filter string="Group by Payment Mode" name="grp_pay"
                        context="{'group_by':'expenses_payment_mode_id'}"/>
                <filter string="Group by Type" name="grp_type" context="{'group_by':'expenses_type_id'}"/>
                <filter string="Group by Date" name="grp_month" context="{'group_by':'date:month'}"/>
                <filter string="Group by Recurring" name="grp_rec" context="{'group_by':'is_recurring'}"/>

            </search>
        </field>
    </record>

    <!--Vista Pivot-->
    <record id="expenses_expenses_view_pivot" model="ir.ui.view">
        <field name="name">exp.expenses.expenses.view.pivot</field>
        <field name="model">exp.expenses.expenses</field>
        <field name="arch" type="xml">
            <pivot string="Expenses Tags" sample="1">
                <!-- Principal: por AÑO -->
                <field name="date" type="row" interval="year"/>
                <!-- Medidas: separados -->
                <field name="income_amount" type="measure"/>
                <field name="expense_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!--Vista Graph-->
    <record id="expenses_expenses_view_graph" model="ir.ui.view">
        <field name="name">exp.expenses.expenses.view.graph</field>
        <field name="model">exp.expenses.expenses</field>
        <field name="arch" type="xml">
            <graph string="Expenses Tags" sample="1">
                <field name="date" interval="month"/>
                <field name="expenses_tag_id"/>
                <field name="expense_amount" type="measure"/>
                <field name="expenses_payment_mode_id"/>
            </graph>
        </field>
    </record>

    <!--Acción que genera las vistas-->
    <record id="action_expenses" model="ir.actions.act_window">
        <field name="name">Expenses</field>
        <field name="res_model">exp.expenses.expenses</field>
        <field name="view_mode">list,form,pivot,graph</field>
        <field name="search_view_id" ref="expenses_expenses_view_search"/>
    </record>

</odoo>
